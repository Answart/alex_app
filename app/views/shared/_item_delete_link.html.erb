  <% if current_user?(item.user) %>
 	<!-- writing the Ruby hash syntax version of 'locals: { symbol: :original-local }' -->
    <%= link_to "delete", item, method: :delete, 
    							:data => { :confirm => "You sure?" }, # used to be '#confirm: "You sure?",'
								title: item.content %>
  <% end %>