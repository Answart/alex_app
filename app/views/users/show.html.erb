<!-- SOURCE: app/views/users/show.html.erb
-PROFILE PAGE-
This page uses Embedded Ruby to display the userâ€™s name and email address, assuming the existence of an instance variable called @user
-->

<% provide(:title, @user.name) %>
<div class="row">

  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
  </aside>

  <div class="span8">
    <% if @user.microposts.any? %>
      <!-- counts the microposts belonging to a given user through the user/micropost association -->
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <!-- preemptively added pagination for microposts
      will_paginate assumes the existence of an instance variable called @users which should be of class ActiveRecord::Relation
       -->
      <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>